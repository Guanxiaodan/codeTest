  "version": "0.2.0",
  "configurations": [
    {
      "name": "调试 Node.js 程序",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/*.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "current file",
      "program": "${file}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
      "sourceMaps": true,
      "env": {
        "BABEL_ENV": "debug"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "runtimeExecutable": "/root/.nvm/versions/node/v8.9.4/bin/node"
    }
